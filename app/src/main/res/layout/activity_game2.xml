<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvplayer1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@drawable/img_1"
    android:orientation="vertical"
    tools:context=".GameActivity2">



    <TableLayout
        android:layout_width="339dp"
        android:layout_height="365dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:background="@drawable/img_2"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            >

            <ImageView
                android:id="@+id/iv_11"
                android:layout_margin="3dp"
                android:layout_width="@dimen/xo_image_size"
                android:layout_height="@dimen/xo_image_size"
                android:onClick="GameBoardClick"/>

            <ImageView
                android:id="@+id/iv_12"
                android:layout_margin="3dp"
                android:layout_width="@dimen/xo_image_size"
                android:layout_height="@dimen/xo_image_size"
                android:onClick="GameBoardClick"/>

            <ImageView
                android:id="@+id/iv_13"
                android:layout_margin="3dp"
                android:layout_width="@dimen/xo_image_size"
                android:layout_height="@dimen/xo_image_size"
                android:onClick="GameBoardClick"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp" >

            <ImageView
                android:id="@+id/iv_21"
                android:layout_margin="3dp"
                android:layout_width="@dimen/xo_image_size"
                android:layout_height="@dimen/xo_image_size"
                android:onClick="GameBoardClick"/>

            <ImageView
                android:id="@+id/iv_22"
                android:layout_margin="3dp"
                android:layout_width="@dimen/xo_image_size"
                android:layout_height="@dimen/xo_image_size"
                android:onClick="GameBoardClick"/>

            <ImageView
                android:id="@+id/iv_23"
                android:layout_margin="3dp"
                android:layout_width="@dimen/xo_image_size"
                android:layout_height="@dimen/xo_image_size"
                android:onClick="GameBoardClick"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp">

            <ImageView
                android:id="@+id/iv_31"
                android:layout_margin="3dp"
                android:layout_width="@dimen/xo_image_size"
                android:layout_height="@dimen/xo_image_size"
                android:onClick="GameBoardClick"/>

            <ImageView
                android:id="@+id/iv_32"
                android:layout_margin="3dp"
                android:layout_width="@dimen/xo_image_size"
                android:layout_height="@dimen/xo_image_size"
                android:onClick="GameBoardClick"/>

            <ImageView
                android:id="@+id/iv_33"
                android:layout_margin="3dp"
                android:layout_width="@dimen/xo_image_size"
                android:layout_height="@dimen/xo_image_size"
                android:onClick="GameBoardClick"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Welcome to Single Player Mode-->>"
        android:textAlignment="center"
        android:textColor="#EDE8E8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />


</androidx.constraintlayout.widget.ConstraintLayout>